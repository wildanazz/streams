{
  "extends": [
    "stylelint-prettier/recommended",
    "stylelint-config-recommended",
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["extends", "ignores", "tailwind"]
      }
    ],
    "block-no-empty": null,
    "indentation": "tab",
    "number-leading-zero": null,
    "unit-whitelist": ["em", "rem", "s"]
  }
}
